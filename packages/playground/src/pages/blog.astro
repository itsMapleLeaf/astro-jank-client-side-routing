---
import { setTimeout } from "timers/promises"
import Layout from "../app/layout.astro"
import FocusWithin from "../dom/focus-within.astro"

if (Astro.request.method === "POST") {
  const params = new URLSearchParams(
    Object.fromEntries(await Astro.request.formData()) as Record<
      string,
      string
    >,
  )
  params.set("commentSuccess", "true")

  await setTimeout(3000)

  return Astro.redirect(`/blog?${params.toString()}`)
}

const url = new URL(Astro.request.url)
const commentSuccess = url.searchParams.get("commentSuccess")
const name = url.searchParams.get("name")
const comment = url.searchParams.get("comment")
---

<Layout title="blog">
  <p>add a comment</p>

  <form
    method="post"
    style="display: grid; gap: 0.5rem; justify-items: flex-start;"
  >
    <label>
      <div>name</div>
      <FocusWithin>
        <input type="text" name="name" placeholder="your name" />
      </FocusWithin>
    </label>
    <label>
      <div>comment</div>
      <textarea
        name="comment"
        placeholder="say something nice!"
        rows={4}
        cols={50}></textarea>
    </label>
    <button type="submit">submit</button>
  </form>

  {
    commentSuccess && (
      <>
        <p style="color: green; font-weight: bold;">
          thanks for your comment, {name}!
        </p>
        <p>{comment}</p>
      </>
    )
  }
</Layout>
